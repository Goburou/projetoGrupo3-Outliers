<%- include('headerAdmin.ejs') %>
<%- include('navAdmin.ejs') %>

<section class="container">
    <h1 class="text-center mt-5"> Relatório de Chamadas</h1>
    <div class="row ">

        
        <section id="tabs" class="col-sm-9  p-3 mt-5 mb-5"
        style="border:1px solid rgba(204, 204, 204, 0.63); border-radius: 12px;">
            <table class="table text-center">
                <thead>
                    <div class="row">
                    <tr>
                        <th class="col-sm-3" scope="col">
                            <h4>Nome</h4>
                        </th>
                        <th class="col-sm-1" scope="col">
                            <h4>Email</h4>
                        </th>
                        <th class="col-sm-1" scope="col">
                            <h4>Telefone</h4>
                        </th>
                        <th class="col-sm-1" scope="col">
                            <h4>Assunto</h4>
                        </th>
                        <th class="col-sm-6" scope="col">
                            <h4>Comentário</h4>
                        </th>
                    </tr>
                    </div>
                </thead>
                <tbody>
                    <%chamado.forEach((item)=> { %>
                    <tr class="text-left">
                        <th scope="row" id="nome"><%=item.nome%></th>
                        <td id="email"><%=item.email%></td>
                        <td id="telefone"><%=item.telefone%></td>
                        <td id="assunto"><%=item.assunto%></td>
                        <td id="assunto"><%=item.comentario%></td>

                    </tr>
                    <% }) %>

                </tbody>
            </table>

        </section>
        <div class="col-sm-3 mt-5" style="border: 2px solid rgb(221, 208, 208); border-radius: 10px ;">
            <div class="mt-3">
                <h4> Chamadas Abertas</h4>
                <p>Total: <%=chamado.length%></p>

            </div>
        </div>
    </div>
</section>



<%- include('footerAdmin.ejs') %>

</body>



</html>