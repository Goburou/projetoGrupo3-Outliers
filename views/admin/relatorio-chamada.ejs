<%- include('headerAdmin.ejs') %>
<%- include('navAdmin.ejs') %>

<div class="row container">
        <section id="tabs" class="project-tab container mt-5 col-sm-8" style="border: 2px solid rgb(221, 208, 208); border-radius: 10px ;">
            <h1 class="text-center">Relatório de Chamadas</h1>
            <table class="table text-center">
                <thead>
                    <tr>
                        <th scope="col">
                            <h4>Nome</h4>
                        </th>
                        <th scope="col">
                            <h4>Email</h4>
                        </th>
                        <th scope="col">
                            <h4>Telefone</h4>
                        </th>
                        <th scope="col">
                            <h4>Assunto</h4>
                        </th>
                        <th scope="col">
                            <h4>Comentário</h4>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <%chamado.forEach((item)=> { %>
                        <tr>
                        <th scope="row" id="nome"><%=item.nome%></th>
                        <td id="email"><%=item.email%></td>
                        <td id="telefone"><%=item.telefone%></td>
                        <td id="assunto"><%=item.assunto%></td>
                        <td id="assunto"><%=item.comentario%></td>

                    </tr>
                    <% }) %>

                </tbody>
            </table>
            <div>
                <p>Próximo cliente a ser atendido:</p>
                <p>00</p>
            </div>
            <div class="mb-5">
                <button class="btn btn-info">Confirmar Atendimento</button>
            </div>


    </section>
    <div class="col-sm-3 mt-5" style="border: 2px solid rgb(221, 208, 208); border-radius: 10px ;">
        <div class="mt-3">
            <h4>Chamadas Atendidas</h4>
            <p>Total: <%=chamado.length%></p>
            <div>
                <h4>Chamadas Pendentes</h4>
                <p>Total: <%=atendimento.length%></p>
            </div>
        </div>
    </div>
</div>



<%- include('footerAdmin.ejs') %>

</body>
<script src="../../administrador/indexAdmin.html"></script>
<script src="../../administrador/relatorio-chamada.js"></script>


</html>