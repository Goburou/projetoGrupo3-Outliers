<%- include('headerAdmin.ejs') %>
<%- include('navAdmin.ejs') %>

<form action="" method="post" id="formCadastroProduto" class="w-50 mx-auto p-4 mt-5 mb-5"
    style="border:3px solid #ccc;border-radius: 12px">

    <fieldset class="form">

        <div class="form-group">
            <label for="tituloFilme"><b>Título</b></label>
            <input class="form-control" type="text" id="tituloFilme" name="tituloFilme" placeholder="Título do filme"
                required>
        </div>

        <div class="form-group">
            <label for="categoriaFilme"><b>Categoria</b>:</label>
            <input class="form-control" type="text" id="categoriaFilme" name="categoriaFilme"
                placeholder="Categoria do filme" required>
        </div>

        <div>
            <label for="sinopseFilme"><b>Sinopse</b>:</label>
            <textarea id="sinopseFilme" name="sinopseFilme" style="border:1px solid #ccc;border-radius: 10px" cols="60"
                rows="8" placeholder="Sinopse filme" required></textarea>
        </div>

        <div class="form-group">
            <label for="preco"><b>Preço<b>:</label>
            <input class="form-inline" aria-label="file example" type="number" step="0.01" id="preco" name="preco"
                required>
        </div>

        <div class="form-group">
            <label for="fotos"><b>Imagem</b>:</label>
            <input class="form-inline" aria-label="file example" type="file" id="fotos" name="fotos" required>
        </div>

        <div class="form-group">
                <label for="trailer">Trailer</label>
            <input class="form-inline" aria-label="file example" type="url" id="trailer" name="trailer"
                placeholder="https://" required>
        </div>

        <div>
            <button type="submit" id="btCadastroProduto" class="btn btn-danger">Enviar</button>
        </div>
    </fieldset>
</form>

<%- include('footerAdmin.ejs') %>

</body>
</html>