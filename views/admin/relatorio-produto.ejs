<%- include('headerAdmin.ejs') %>
<%- include('navAdmin.ejs') %>

<section class="container">
    <h1 class="text-center mt-5"> Relatório de Produtos</h1>
    <div class="row container">
        <section id="tabs" class="project-tab container mt-5 col-sm-9"
            style="border: 2px solid rgb(221, 208, 208); border-radius: 10px ;">
            <table class="table  ">
                <thead class="">
                    <tr>
                        <th scope="col sm-5 mt-5">
                            <h4 class="subtitulo">Título</h4>
                        </th>
                        <th scope="col" class="text-left">
                            <h4 class="subtitulo">Categoria</h4>
                        </th>
                        <th scope="col" class="text-right">
                            <h4 class="subtitulo">Preço</h4>
                        </th>


                    </tr>
                </thead>
                <tbody>
                    <%produto.forEach((item)=> { %>
                    <tr>
                        <th scope="row" id="titulo" name="titulo"><%=item.titulo%></th>
                        <th scope="row" id="categoria" name="categoria" class="text-left"><%=item.genero%></th>

                        <td id="preco" name="preco" class="text-right"><b>R$</b> <%=item.preco%></td>


                    </tr>
                    <% }) %>

                </tbody>
            </table>
            <div>

        </section>
        <div class="col-sm-2 mt-5" style="border: 2px solid rgb(221, 208, 208); border-radius: 10px ;">
            <div class="mt-3">
                <h4>Total de Filmes</h4>
                <p><b><%=produto.length%></b> filmes cadastrados</p>
            </div>





        </div>
    </div>
</section>


<%- include('footerAdmin.ejs') %>

</body>
<script src="../../administrador/indexAdmin.html"></script>
<script src="../../administrador/relatorio-chamada.js"></script>


</html>